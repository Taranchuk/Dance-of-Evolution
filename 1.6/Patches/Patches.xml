<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/HediffDef[@Name="DiseaseBase"]</xpath>
		<value>
			<li Class="DanceOfEvolution.ServantSettingsExtension">
				<isDisease>True</isDisease>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/EntityCodexEntryDef[defName="Metalhorror"]/discoveredResearchProjects</xpath>
		<value>
			<li>DE_LivingMetal</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ResearchProjectDef[defName="SummonPitGate"]/researchViewX</xpath>
		<value>
			<researchViewX>6.50</researchViewX>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ResearchProjectDef[defName="SummonPitGate"]/researchViewY</xpath>
		<value>
			<researchViewY>1.90</researchViewY>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ResearchProjectDef[defName="NeurosisPulse"]/researchViewX</xpath>
		<value>
			<researchViewX>6.50</researchViewX>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ResearchProjectDef[defName="NeurosisPulse"]/researchViewY</xpath>
		<value>
			<researchViewY>1.30</researchViewY>
		</value>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Overhaul</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DE_FungalNode"]/costList/ComponentIndustrial</xpath>
					<value>
						<DankPyon_Bone>9</DankPyon_Bone>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DE_Sporemaker"]/costList/ComponentIndustrial</xpath>
					<value>
						<DankPyon_Bone>30</DankPyon_Bone>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DE_Cerebrum"]/costList/ComponentIndustrial</xpath>
					<value>
						<DankPyon_Bone>12</DankPyon_Bone>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DE_Sporemaker"]/costList/ComponentSpacer</xpath>
					<value>
						<DankPyon_ComponentBasic>4</DankPyon_ComponentBasic>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DE_Cloudmaker"]/costList/ComponentSpacer</xpath>
					<value>
						<DankPyon_ComponentBasic>6</DankPyon_ComponentBasic>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Races Expanded - Fungoid</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VRE_FungoidShipPart"]/killedLeavings</xpath>
					<value>
						<DE_NexusBurgeon>1</DE_NexusBurgeon>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/HediffDef[defName="FleshmassLung"]</xpath>
		<value>
			<spawnThingOnRemoved>DE_FleshmassLung</spawnThingOnRemoved>
		</value>
	</Operation>

</Patch>