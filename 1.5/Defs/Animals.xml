<Defs>
    <ThingDef ParentName="AnimalThingBase">
        <defName>DE_Burrower</defName>
        <label>burrower</label>
        <description>Burrowers are spawned by the Fungal Nexus. They seek out rotten corpses to infect. Once they find one, they will begin to reanimate the corpse using the shambler revival animation. Burrowers have no needs and die after a day.</description>
        <statBases>
            <MoveSpeed>5</MoveSpeed>
            <MarketValue>50</MarketValue>
            <ComfyTemperatureMin>-10</ComfyTemperatureMin>
            <ComfyTemperatureMax>30</ComfyTemperatureMax>
            <CarryingCapacity>10</CarryingCapacity>
        </statBases>
        <uiIconScale>1.5</uiIconScale>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>3</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
        </tools>
        <race>
            <body>QuadrupedAnimalWithPawsAndTail</body>
            <baseBodySize>0.3</baseBodySize>
            <baseHealthScale>0.3</baseHealthScale>
            <baseHungerRate>0</baseHungerRate>
            <foodType>None</foodType>
            <wildness>1.0</wildness>
            <trainability>None</trainability>
            <lifeExpectancy>1</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0</minAge>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li>
                <compClass>DanceOfEvolution.CompBurrower</compClass>
            </li>
        </comps>
    </ThingDef>

    <PawnKindDef ParentName="AnimalKindBase">
        <defName>DE_Burrower</defName>
        <label>burrower</label>
        <race>DE_Burrower</race>
        <combatPower>5</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Burrower/Burrower</texPath>
                    <drawSize>1</drawSize>
